Page {
    height: 100%;
}

.Work{
    position: flex;
    flex-direction:column;
}

.itme,.itme-cen{
    display: inline-block;
    width: 30%;
    padding: 5px;
    font-size: 12px;
    text-align: center;
    border-bottom: 1px solid #ccc;
}

.itme-class{
    padding: 20rpx 0;
}

.itme-img{
    height:150rpx;
    width:150rpx;
    vertical-align:middle

}

.itme-cen{
    border-left: 1px solid #ccc;
    border-right: 1px solid #ccc;
}

.itme-last{
    border-right: 1px solid #ccc;
}

.clearfix:after {
    content: "";  
    height: 0; 
    line-height: 0; 
    display: block; 
    visibility: hidden; 
    clear: both
}

.clearfix {
    zoom: 1;
}
