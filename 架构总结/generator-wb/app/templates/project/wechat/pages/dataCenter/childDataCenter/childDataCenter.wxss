
.view-item{
  padding:10rpx 20rpx;
  margin-top:20rpx;
}
/* ------------------------------------------------------------
   头部
------------------------------------------------------------ */
.item-top .top-left{
  width: 70%;
}
.item-top .top-right{
  text-align: right;
}
.top-left span{
  padding-left:10rpx;
}
.item-top .address-icon{
  width:39rpx;
  height:50rpx;
  vertical-align: middle;
}
.address-arrow{
  width:26rpx;
  height:26rpx;

  background: url(data:image/png;base64,) no-repeat;
  background-size: 100% 100%;

}

/* ------------------------------------------------------------
   中部
------------------------------------------------------------ */
.item-center{
  /* line-height: 260rpx; */
  text-align: center;
  width: 100%;
  padding-top:50rpx;

}
.item-center .wendu{
    display:block;
    text-align:center;
    font-weight: 600;
}
.item-center .shidu{
    font-size: 32rpx;
    display:block;
    text-align:center;
    color:#292f2e;
}
.shidu image{
  height:20rpx;
  width:28rpx;
  vertical-align:middle;
}

/* ------------------------------------------------------------
   底部
------------------------------------------------------------ */
.item-footer{
  margin-top:30rpx;
}
.shebei{
  width: 50%;
  color:#999;
}
.shebei .address-arrow{
  width:30rpx;
  height:30rpx;

}

.shebei-title{
    font-size: 48rpx;
    padding-left:10rpx;
    padding-right:5rpx;

}
.shebei-count{
  font-size:30rpx;
}
