   picker
------------------------------------------------------------ */
.picker-wrap{
  position: relative;
}
.picker-wrap .picker-imager{
  position: absolute;
  top: 0;
  bottom: 0;
  right: 0;
  margin: auto;
  display: inline-block;
  height:3vh;
  width:3vh;
}
.picker-wrap .wrap-title{
  padding-right: 50rpx;
  text-align: right;
}
.picker-wrap .picker-imager image{
  height:3vh;
  width:3vh;
  display:inline-block;
}

.picker-wrap .picker-title{
width:30%;
}
.picker-wrap .picker-choice{
  width:40%
}
.picker-wrap .picker-image image{
  height:3vh;
  width:3vh;
  display:inline-block;
  float: right;

}
.wrap-time .wrap-middle{
  width: 80rpx;
}
.wrap-time .wrap-middle image{
  width:62rpx;
  height:62rpx;

}
