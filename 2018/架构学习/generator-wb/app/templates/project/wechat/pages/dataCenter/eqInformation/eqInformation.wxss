.eqInfor-top{
  margin-bottom: 20rpx;
  line-height: 80rpx;
  color: #ccc;
  font-size: 14px;
  background-color:#fff;
  border-bottom:1px solid #ccc;
  padding-bottom:5px;
  text-align:center;
  position:fixed;
  width:100%;
  top:0;
  z-index:1000;
}

.eqInfor-conter{
  padding: 10px;
  font-size: 14px;
  background-color:#fff;
  border-bottom: 1px solid #ccc;
}

.navigator-hover{
  color: #3CB371;
  background-color: white;
  position: relative;
}

.navigator-hover::before{
  content:"";
  position: absolute;
  bottom: -10rpx;
  left: 30%;
  width: 50rpx;
  height: 6rpx;
  background-color: #3CB371;
}

.title{
  float: left;
}

.title-input{
  color:#333;
  float: right;

}
.read-only .title-input{
  color:#999 !important;
}

.write-item-wrap .write-title{
  width:380rpx;
}
.write-item-wrap .write-input{
  text-align: right;
  color:#333;
}
.write-item-wrap .write-unit{
  width:30rpx;
  text-align: left;
}

